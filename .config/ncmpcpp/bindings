# Database
def_key "u"
  update_database
def_key "e"
  edit_song
def_key "i"
  show_song_info
def_key "I"
  show_artist_info

# Tab
def_key "f1"
  show_help
def_key "tab"
  next_screen
def_key "shift-tab"
  previous_screen
def_key "1"
  show_playlist
def_key "2"
  show_browser
def_key "3"
  show_search_engine
def_key "4"
  show_media_library
def_key "5"
  show_playlist_editor
def_key "6"
  show_tag_editor
def_key "7"
  show_outputs
def_key ";"
  show_visualizer
def_key "="
  show_clock
def_key "@"
  show_server_info
def_key "#"
  toggle_bitrate_visibility

# Moving
def_key "k"
  scroll_up
def_key "j"
  scroll_down
def_key "l"
  next_column
def_key "h"
  previous_column
def_key "ctrl-d"
  page_down
def_key "ctrl-u"
  page_up
def_key "0"
  move_home
def_key "9"
  move_end
def_key "g"
  jump_to_position_in_song
def_key "["
  scroll_up_album
def_key "]"
  scroll_down_album
def_key "{"
  scroll_up_artist
def_key "}"
  scroll_down_artist
def_key "o"
  jump_to_playing_song
def_key "G"
  jump_to_browser
def_key "E"
  jump_to_tag_editor

# Selection
def_key "space"
  select_item
def_key "K"
  select_item
  scroll_up
def_key "J"
  select_item
  scroll_down
def_key "v"
  reverse_selection
def_key "V"
  remove_selection
def_key "B"
  select_album

# Playlist
def_key "a"
  add_selected_items
def_key "a"
  add_item_to_playlist
def_key "x"
  delete_playlist_items
def_key "c"
  clear_main_playlist
# Like clear_main_playlist, but keep current playing song
def_key "ctrl-r"
  reverse_playlist
def_key "ctrl-s"
  sort_playlist
def_key "m"
  move_sort_order_up
def_key "m"
  move_selected_items_up
def_key "n"
  move_sort_order_down
def_key "n"
  move_selected_items_down


# Volume
def_key "+"
  volume_up
def_key "-"
  volume_down

# Play / Pause / Stop / Replay a song
def_key "p"
  pause
def_key "p"
  play_item
def_key "backspace"
  replay_song
def_key "P"
  play_item
def_key "S"
  save_playlist

# Lyrics
def_key "l"
  show_lyrics

# Next / Previous song
def_key ">"
  next
def_key "<"

# Position of a song
  previous
def_key "f"
  seek_forward
def_key "b"
  seek_backward
def_key "t"
  jump_to_position_in_song


# Play mode
# Cycle play single song
def_key "r"
  toggle_single
# Cycle play playlist
def_key "R"
  toggle_repeat
def_key "z"
  toggle_random
# Shuffle playlist
def_key "Z"
  shuffle
